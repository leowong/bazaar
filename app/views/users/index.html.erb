<% title "Users" %>

<ul>
  <% for user in @users %>
    <li>
      <%=h user.username %>
      <%= link_to "Show", user.username %>
      <%= link_to "Edit", edit_user_path(user) %>
      <%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %>
    </li>
  <% end %>
</ul>

<p><%= link_to "New User", new_user_path %></p>
