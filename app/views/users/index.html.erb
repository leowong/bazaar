<% title "Stores", false %>

<% form_tag search_url, :method => 'get' do %>
  <%= text_field_tag :q, params[:q], :size => "25" %>
  <%= submit_tag "Search", :name => nil %>
  <%= radio_button_tag 'type', "products" %>Products
  <%= radio_button_tag 'type', "stores", true %>Stores
<% end %>

<ul>
  <% for user in @users %>
    <li>
      <%=h user.username %>
      <%= link_to "Show", user.username %>
      <%= link_to "Edit", edit_user_path(user) %>
      <%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %>
    </li>
  <% end %>
</ul>

<p><%= link_to "New User", new_user_path %></p>
