<% title "Products" %>

<div style="float:right">
  Sort by:
  <%= select_tag 'o', options_for_select(ordering_options, params[:order]), :onchange => "window.location='#{reset_ordering_parameter}'+this.options[this.selectedIndex].value;" %>
</div>

<% form_tag products_url, :method => 'get' do %>
  <%= text_field_tag :q, params[:q], :size => "25" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<ul class="product-listing">
  <% for product in @products %>
    <li>
      <% link_to product do %>
        <%= image_tag cloudfront(product.images.first.attachment.url(:small)) unless product.images.empty? %>
      <% end %>
      <% link_to product, :class => "info" do %>
        <span class="name"><%= h(product.name) %></span>
        <span class="price selling"><%= number_to_currency product.price %></span>
	<span class="store"><%= product.user.username %></span>
      <% end %>
    </li>
  <% end %>
</ul>
