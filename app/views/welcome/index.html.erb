<div id="search">
  <% form_tag search_url, :method => 'get' do %>
    <div class="input">
      <%= text_field_tag :q, params[:q], :size => "25" %>
    </div>
    <div class="submit">
      <%= submit_tag t('search'), :name => nil %>
    </div>
    <div class="type clear">
      <%= radio_button_tag 'type', "products", true %><%= t('activerecord.models.product') %>
      <%= radio_button_tag 'type', "stores" %><%= t('activerecord.models.user') %>
    </div>
  <% end %>
</div>

<ul class="product-listing clear">
  <% for product in @products %>
    <li>
      <% link_to product do %>
        <%= image_tag cloudfront(product.images.first.attachment.url(:small)) unless product.images.empty? %>
      <% end %>
      <% link_to product, :class => "info" do %>
        <span class="name"><%= h(product.name) %></span>
        <span class="price selling"><%= number_to_currency product.price %></span>
	<span class="store"><%= product.user.store_name %></span>
      <% end %>
    </li>
  <% end %>
</ul>
