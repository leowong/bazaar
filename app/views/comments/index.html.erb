<% title "Comments" %>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Contact</th>
    <th>Content</th>
  </tr>
  <% for comment in @comments %>
    <tr>
      <td><%=h comment.user_id %></td>
      <td><%=h comment.name %></td>
      <td><%=h comment.contact %></td>
      <td><%=h comment.content %></td>
      <td><%= link_to "Show", comment %></td>
    </tr>
  <% end %>
</table>
