<% form_for [:admin, @product] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :class=> "mceEditor", :style => "width:50%;height:36em" %>
  </p>
  <p><%= f.submit t('buttons.submit') %></p>
<% end %>
