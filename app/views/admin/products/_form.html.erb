<% nested_form_for [:admin, @product], :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <span style="color:red">*</span><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price %>
    <span style="color:red">*</span><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :category_id %><br />
    <%= f.collection_select :category_id, current_user.categories, :id, :name, :include_blank => true %>
  </p>
  <p>
    <%= f.label :tag_names, t('products.tag_names') %><%= t('products.tag_names_info') %><br />
    <%= f.text_field :tag_names, :size => 60 %>
  </p>
  <p>
    <%= f.label :description %>
    <span style="color:red">*</span><br />
    <%= f.text_area :description, :class=> "mceEditor", :style => "width:50%;height:36em" %>
  </p>

  <p><%= f.submit t('buttons.submit') %></p>
<% end %>
