<% form_for [:admin, @image], :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.hidden_field :viewable_id %>
    <%= f.hidden_field :viewable_type %>
    <%= f.label :attachment, t('images.upload') %><br />
    <%= f.file_field :attachment %>
  </p>
  <p><%= f.submit t('buttons.submit') %></p>
<% end %>
