<% title "Stores", false %>

<% form_tag admin_users_url, :method => 'get' do %>
  <%= text_field_tag :q, params[:q], :size => "25" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<ul>
  <% for user in @users %>
    <li>
      <%=h user.username %>
      <%= link_to "Show", store_path(user.username) %>
      <%= link_to "Edit", edit_admin_user_path(user) %>
      <%= link_to "Destroy", [:admin, user], :confirm => 'Are you sure?', :method => :delete %>
    </li>
  <% end %>
</ul>

<p><%= link_to "New User", new_admin_user_path %></p>
