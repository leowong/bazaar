<div id="navigation">
  <% if current_user %>
    <%= link_to h(current_user.store_name), store_path(current_user.username) %> |
    <% if admin? %>
      <%= link_to "Stores", admin_users_url %> |
    <% end %>
    <% if seller? %>
      <%= link_to "Products", admin_products_path %> |
    <% end %>
    <%= link_to "Profile", admin_user_path(:current) %> |
    <%= link_to "Logout", logout_path %>
  <% else %>
    <%= link_to "Login", login_path %>
  <% end %>
</div>
